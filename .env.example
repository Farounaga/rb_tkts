# Zendesk
ZENDESK_EMAIL=
ZENDESK_API_TOKEN=
ZENDESK_SUBDOMAIN=
# Optionnel : ajouter automatiquement le suffixe /token
ZENDESK_ADD_TOKEN_SUFFIX=true

# Ollama (LOCAL)
OLLAMA_BASE_URL=http://localhost:11434
# IMPORTANT : modèle local pour vectorisation
OLLAMA_EMBED_MODEL=mxbai-embed-large
# IMPORTANT : modèle local pour nommage/résumé des topics
OLLAMA_LLM_MODEL=llama3:instruct

# Pipeline
TICKETS_XML_PATH=../mesvaccinshelp-20250211/tickets.xml
EMBEDDINGS_OUTPUT=embeddings.json
CLUSTERS_OUTPUT=clusters.json
CLUSTER_TOPICS_OUTPUT=cluster_topics.json
HTML_REPORT_OUTPUT=output/visualisation.html
KMEANS_K=10
EMBEDDING_THREADS=4
# Limite optionnelle pour run de test rapide (ex: 100 ou 300)
MAX_TICKETS=
# Timeouts Ollama (secondes)
OLLAMA_OPEN_TIMEOUT=5
OLLAMA_READ_TIMEOUT=180
# Backoff de retry (secondes)
OLLAMA_RETRY_BASE_DELAY=0.5
# Timeouts/retries spécifiques à la génération des topics de clusters
TOPIC_OPEN_TIMEOUT=5
TOPIC_READ_TIMEOUT=180
TOPIC_MAX_RETRIES=3
TOPIC_RETRY_BASE_DELAY=0.5
RUN_EMBEDDINGS=true
RUN_CLUSTERING=true
SIMILAR_TICKETS_OUTPUT=similar_tickets.json
CLUSTERING_METRICS_OUTPUT=clustering_metrics.json
RUN_CLUSTERING_METRICS=true
RUN_SIMILARITY=true
SIMILARITY_TOP_K=5
SIMILARITY_THRESHOLD=0.80
